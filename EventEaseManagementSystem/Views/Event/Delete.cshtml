@model EventEaseManagementSystem.Models.Event

@{
    ViewData["Title"] = "Delete Event"; // Changed title
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-danger">Are you sure you want to delete this event?</h3> 
    <div>
        <form asp-action="Delete" method="post" class="d-inline-block" id="deleteEventForm">

            <input type="hidden" asp-for="EventId" />
            <button type="submit" class="btn btn-danger me-2">Delete</button> 
        </form>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a> 
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-12">
        <h3 class="mb-3">@Model.EventName</h3> 
        <p class="text-muted mb-4">@Model.Description</p>

        <dl class="row mb-0">
            <dt class="col-sm-3">Event Date:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EventDate)</dd>

            <dt class="col-sm-3">Venue:</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Venue.VenueName) 
            </dd>
        </dl>
    </div>
</div>

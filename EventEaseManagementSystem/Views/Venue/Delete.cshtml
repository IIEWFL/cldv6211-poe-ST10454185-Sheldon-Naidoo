@model EventEaseManagementSystem.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-danger">Are you sure you want to delete this venue?</h3> 
    <div>
        <form asp-action="Delete" method="post" class="d-inline-block" id="deleteForm">
            <input type="hidden" asp-for="VenueId" />
            <button type="submit" class="btn btn-danger me-2">Delete</button> 
        </form>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a> 
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Venue Image" class="img-fluid rounded shadow-sm" style="max-width: 100%; height: auto;" />
        }
        else
        {
            <div class="bg-light d-flex align-items-center justify-content-center border rounded" style="width: 100%; height: 250px;">
                <span class="text-muted">No Image Available</span>
            </div>
        }
    </div>


    <div class="col-md-8">
        <h3 class="mb-3">@Model.VenueName</h3> 
        <p class="text-muted mb-4">@Model.Location</p> 

        <dl class="row mb-0">
            <dt class="col-sm-3">Capacity:</dt>
            <dd class="col-sm-9">@Model.Capacity</dd>

            <dt class="col-sm-3">Available:</dt>
            <dd class="col-sm-9">@(Model.IsAvailable ? "Yes" : "No")</dd> 
        </dl>
    </div>
</div>
